@model PersonelPortal.Models.Personel
@{
    ViewData["Title"] = "Personel Düzenle";
}

<div class="sayfa-arka">
    <div class="ust-bar">
        <a class="btn" href="/Rehber/Index">⬅ Geri</a>
    </div>

    <h1 class="sayfa-baslik">Personel Düzenle</h1>

    <form method="post" class="form-kutu">
        <input type="hidden" asp-for="Id" />

        <label>Ad Soyad</label>
        <input asp-for="AdSoyad" />

        <label>Ünvan</label>
        <input asp-for="Unvan" />

        <label>Birim</label>
        <input asp-for="Birim" />

        <label>Telefon</label>
        <input asp-for="Telefon" />

        <button class="btn btn-primary" type="submit">Güncelle</button>
    </form>
</div>

<style>
    body {
        background: #fff3a6;
        color: #000;
    }

    .sayfa-arka {
        min-height: 100vh;
        padding: 40px;
        background: #fff3a6;
    }

    .sayfa-baslik {
        font-size: 34px;
        font-weight: 800;
        margin: 16px 0 24px;
    }

    .ust-bar {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 8px;
    }

    .form-kutu {
        max-width: 520px;
        background: rgba(255,255,255,0.6);
        border: 2px solid #000;
        border-radius: 14px;
        padding: 18px;
    }

    label {
        font-weight: 800;
        display: block;
        margin: 10px 0 6px;
    }

    input {
        width: 100%;
        padding: 10px 12px;
        border-radius: 10px;
        border: 2px solid #000;
        background: rgba(255,255,255,0.8);
        outline: none;
    }

    .btn {
        display: inline-block;
        margin-top: 14px;
        padding: 10px 14px;
        border-radius: 10px;
        text-decoration: none;
        border: 2px solid #000;
        color: #000;
        font-weight: 800;
        background: rgba(255,255,255,0.55);
        cursor: pointer;
    }

    .btn-primary {
        background: #000;
        color: #fff;
    }

        .btn-primary:hover {
            background: #333;
        }
</style>