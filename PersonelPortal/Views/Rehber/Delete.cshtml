@model PersonelPortal.Models.Personel
@{
    ViewData["Title"] = "Personel Sil";
}

<div class="sayfa-arka">
    <div class="ust-bar">
        <a class="btn" href="/Rehber/Index">⬅ Geri</a>
    </div>

    <h1 class="sayfa-baslik">Personel Sil</h1>

    <div class="form-kutu">
        <p><b>@Model.AdSoyad</b> adlı personeli silmek istiyor musun?</p>
        <p>Ünvan: @Model.Unvan</p>
        <p>Birim: @Model.Birim</p>
        <p>Telefon: @Model.Telefon</p>

        <form method="post">
            <input type="hidden" asp-for="Id" />
            <button class="btn btn-danger" type="submit">Evet, Sil</button>
        </form>
    </div>
</div>

<style>
    body {
        background: #fff3a6;
        color: #000;
    }

    .sayfa-arka {
        min-height: 100vh;
        padding: 40px;
        background: #fff3a6;
    }

    .sayfa-baslik {
        font-size: 34px;
        font-weight: 800;
        margin: 16px 0 24px;
    }

    .ust-bar {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 8px;
    }

    .form-kutu {
        max-width: 520px;
        background: rgba(255,255,255,0.6);
        border: 2px solid #000;
        border-radius: 14px;
        padding: 18px;
    }

    .btn {
        display: inline-block;
        margin-top: 14px;
        padding: 10px 14px;
        border-radius: 10px;
        text-decoration: none;
        border: 2px solid #000;
        color: #000;
        font-weight: 800;
        background: rgba(255,255,255,0.55);
        cursor: pointer;
    }

    .btn-danger {
        background: #b00020;
        color: #fff;
    }

        .btn-danger:hover {
            background: #8f001a;
        }
</style>