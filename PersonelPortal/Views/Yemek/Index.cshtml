@{
    ViewData["Title"] = "Yemek Listesi";
}

<div class="sayfa-arka">
    <h2 class="baslik">Haftalık Yemek Listesi</h2>

    <table class="yemek-tablo">
        <thead>
            <tr>
                <th>Gün</th>
                <th>Yemekler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Pazartesi</td>
                <td>Mercimek Çorbası – Kuru Fasulye – Pilav – Tatlı</td>
            </tr>
            <tr>
                <td>Salı</td>
                <td>Yayla Çorbası – Barbunya – Makarna – Meşrubat</td>
            </tr>
            <tr>
                <td>Çarşamba</td>
                <td>Domates Çorbası – Adana Kebap – Söğüş – Meşrubat</td>
            </tr>
            <tr>
                <td>Perşembe</td>
                <td>Tarhana Çorbası – Nohut Yemeği – Pilav – Turşu</td>
            </tr>
            <tr>
                <td>Cuma</td>
                <td>Hamburger – Tatlı – Meşrubat</td>
            </tr>
        </tbody>
    </table>
</div>

<style>
    body {
        background: #fff3a6;
        color: #000;
    }

    .sayfa-arka {
        min-height: 100vh;
        padding: 40px;
        background: #fff3a6;
    }

    .baslik {
        font-size: 30px;
        font-weight: 800;
        margin-bottom: 30px;
    }

    .yemek-tablo {
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        border-collapse: collapse;
        background: rgba(255,255,255,0.4);
        border-radius: 12px;
        overflow: hidden;
    }

        .yemek-tablo th,
        .yemek-tablo td {
            border: 2px solid #000;
            padding: 14px;
            text-align: left;
            font-size: 16px;
        }

        .yemek-tablo th {
            background: rgba(0,0,0,0.05);
            font-weight: 800;
        }

        .yemek-tablo tr:hover {
            background: rgba(0,0,0,0.04);
        }
</style>